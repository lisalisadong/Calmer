            android:name="com.pennapps.calmly.ViewTrendsActivity"
            android:label="@string/title_activity_view_trends" >
        </activity>
        <activity
            android:name="com.pennapps.calmly.DataPlotActivity"
            android:label="@string/title_activity_data_plot" >
        </activity>
    </application>

</manifest>
